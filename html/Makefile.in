TEMPLATES = error.html login.html login_error.html verify-logout.html reauth.html
HTML = cosign_base.css cosign_js.css post_error.html looping.html
prefix=@prefix@
exec_prefix=@exec_prefix@
TMPLDIR  = @prefix@/templates
HTMLDIR  = @prefix@/html
SERVICESDIR  = @prefix@/services
INSTALL	=	@INSTALL@

all: ${TEMPLATES}

install : all
	-mkdir -p ${exec_prefix}
	-mkdir -p ${TMPLDIR}
	-mkdir -p ${HTMLDIR}
	for i in ${TEMPLATES}; do \
	    ${INSTALL} -m 0644 -c $$i ${TMPLDIR}/; \
	done
	for i in ${HTML}; do \
	    ${INSTALL} -m 0644 -c $$i ${HTMLDIR}/; \
	done
	-mkdir -p ${HTMLDIR}/images
	cp images/*.gif ${HTMLDIR}/images/
	cp images/*.png ${HTMLDIR}/images/
	-mkdir -p ${HTMLDIR}/js
	cp js/*.js ${HTMLDIR}/js/
	-mkdir -p ${SERVICESDIR}
	cp services/*.html ${SERVICESDIR}/

clean:
